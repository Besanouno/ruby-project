<div class="login-form">
  <div class="main-div col-md-8 col-lg-8 col-sm-12 card">
    <h2 style="margin-bottom: 10%" class="text-label">Zarejestruj się</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field text-label">
        <%= f.label "Adres e-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field text-label">
        <%= f.label "Hasło" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field text-label">
        <%= f.label "Potwierdź hasło" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Zarejestruj się" %>
      </div>
    <% end %>
  </div>
</div>