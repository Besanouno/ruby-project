<div class="login-form">
  <div class="main-div col-md-8 col-lg-8 col-sm-12 card">
    <h2 style="margin-bottom: 5%" class="text-label">Zaloguj się</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-label">
        <%= f.label "Adres e-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field text-label">
        <%= f.label "Hasło" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field text-label">
          <%= f.check_box :remember_me%>
          <%= f.label "Zapamiętaj mnie"%>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Zaloguj się",  :class => 'btn-primary'  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

