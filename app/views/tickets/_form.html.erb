<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> Nie można zapisać biletu:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Imię i nazwisko" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label "Adres" %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label "Cena" %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label "Adres e-mail" %>
    <%= form.text_field :email_address %>
  </div>

  <div class="field">
    <%= form.label "Telefon" %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label "Numer siedzenia" %>
    <%= form.text_field :seat_id_seq %>
  </div>

  <div class="field">
    <% if ticket.event_id.nil? %>
      <%= form.label "Wydarzenie" %>
      <%= form.text_field :event_id %>
    <% else %>
      <%= form.hidden_field "Wydarzenie" %>
      <%= form.hidden_field :event_id %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Zapisz" %>
  </div>
<% end %>
