<% if @ticket.event_id.nil? %>
  <div class="card col-lg-3 col-md-3" style="text-align: left;">
    <h2 class="text-label" style="margin-bottom: 5%">Buy ticket</h2>

    <%= render 'form', ticket: @ticket %>

    <%= link_to 'Back', tickets_path %>

  </div>

  <div class="card col-lg-8 col-md-8">
    <%= render 'events/showall', events: Event.all %>
  </div>
<% else %>
  <div class="card single-card col-lg-6 col-md-6" style="text-align: left;">
    <h2 class="text-label" style="margin-bottom: 5%">Buy ticket</h2>

    <%= render 'form', ticket: @ticket %>

    <%= link_to 'Back', tickets_path %>

  </div>
<% end %>