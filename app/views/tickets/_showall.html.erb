<h1>Tickets</h1>

<div class="container-fluid">
  <div class="row">
    <main role="main" class="col-md-12" style="margin: 0 auto; border: 1px solid">
      <div class="table-responsive">
        <table class="table table-striped table-sm" style="margin-top: 5%; text-align: left">
          <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Price</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Seat number</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% tickets.each do |ticket| %>
            <tr>
              <td><%= ticket.name %></td>
              <td><%= ticket.address %></td>
              <td><%= ticket.price %></td>
              <td><%= ticket.email_address %></td>
              <td><%= ticket.phone %></td>
              <td><%= ticket.seat_id_seq %></td>
              <td><%= link_to 'Details', ticket %></td>
              <% if ticket.user == current_user %>
                <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                <td><%= link_to 'Remove', ticket, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>


<br>