<h1>All events</h1>

<main role="main">

  <div class="album py-5 bg-light">
    <div class="event-grid">

      <div class="row">
        <% for event in @events %>
          <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
            <div class="card" style="height: 70px;">
              <h2 class="title"><%= event.id %>. <%= link_to event.artist, "/events/#{event.id}" %></h2>
              <h1 class="description"><%= event.description %></h1>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</main>

<%= link_to 'New event', new_event_path %>